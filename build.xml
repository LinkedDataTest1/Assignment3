<project name="Assignment3Build" default="run" basedir=".">
	<property name="sourcedir" value=" "/>
	<property name="tasktest" value=" "/>

	<path id="class.path">
	  <fileset dir="lib">
		<include name="**/*.jar" />
	  </fileset>
	</path>
	
    <target name="clean">
        <delete dir="out"/>
    </target>

    <target name="compile" depends="clean">
        <mkdir dir="out/classes"/>
        <javac srcdir="${sourcedir}" destdir="out/classes">
			<classpath refid="class.path" />
		</javac>
    </target>

    <target name="test" depends="compile">
		<junit printsummary="on" haltonfailure="yes" fork="true">
			<test name="${tasktest}"></test>
			<classpath>
			  <path refid="class.path"/>
			  <pathelement location="out/classes"/>
			</classpath>
			<formatter type="brief" usefile="false" />
		</junit>
    </target>

</project>